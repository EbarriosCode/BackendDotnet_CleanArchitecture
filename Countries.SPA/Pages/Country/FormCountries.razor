<EditForm Model="@country" OnValidSubmit="@OnValidSubmit" class="card card-body bg-light mt-5">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="name" class="col-md-2 col-form-label">Name</label>
        <div class="col-md-10">
            <InputText id="name" Class="form-control" placeholder="Name" @bind-Value="country.Name" />
            <ValidationMessage For="@(()=> country.Name)" class="text-danger" />
        </div>
    </div>

    <div class="form-group row">
        <label for="alpha2" class="col-md-2 col-form-label">Alpha 2</label>
        <div class="col-md-10">
            <InputText id="alpha2" Class="form-control" placeholder="Alpha 2" @bind-Value="@country.Alpha_2" />
            <ValidationMessage For="@(()=> country.Alpha_2)" class="text-danger" />
        </div>
    </div>
    <div class="form-group row">
        <label for="alpha3" class="col-md-2 col-form-label">Alpha 3</label>
        <div class="col-md-10">
            <InputText id="alpha3" Class="form-control" placeholder="Alpha 3" @bind-Value="@country.Alpha_3" />
            <ValidationMessage For="@(()=> country.Alpha_3)" class="text-danger" />
        </div>
    </div>

    <div class="form-group row">
        <label for="numericCode" class="col-md-2 col-form-label">Numeric Code</label>
        <div class="col-md-10">
            <InputText id="numericCode" Class="form-control" placeholder="Numeric Code" @bind-Value="@country.NumericCode" />
            <ValidationMessage For="@(()=> country.NumericCode)" class="text-danger" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">                
                @TextButton
            </button>
        </div>
    </div>
</EditForm>

@code 
{
    [Parameter] public CountryDTO country { get; set; } = new CountryDTO();
    [Parameter] public string TextButton { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
